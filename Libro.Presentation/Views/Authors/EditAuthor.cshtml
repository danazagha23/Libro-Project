@model AuthorViewModel

@{
    ViewData["Title"] = "EditAuthor";
}

<h2>Edit Author Details</h2>

<form asp-action="EditAuthor" method="post">
    <input type="hidden" asp-for="AuthorId" />

    <div class="form-group">
        <label asp-for="AuthorName">Author Name</label>
        <input type="text" asp-for="AuthorName" class="form-control" value="@Model.AuthorName" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography">Biography</label>
        <input type="text" asp-for="Biography" class="form-control" value="@Model.Biography" />
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
