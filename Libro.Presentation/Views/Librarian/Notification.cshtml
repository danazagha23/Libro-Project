@model NotificationViewModel

@{
    ViewData["Title"] = "Send Notification";
}

<h1>Send Notification</h1>

<form method="post" asp-action="SendDueDateNotification">
    <label>Due Date Notification:</label>
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>  
    <div class="form-group">
        <label for="dueDate">Due Date:</label>
        <input type="date" id="dueDate" name="dueDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

<form method="post" asp-action="SendReservationNotification">
    <label>Reservation Notification:</label>
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="reservedBook">Reserved Book:</label>
        <input type="text" id="reservedBook" name="reservedBook" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
