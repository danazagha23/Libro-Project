@model PatronsViewModel

<h1>All Patrons</h1>
<form asp-controller="Admin" asp-action="Patrons" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="form-group">
                <label for="selectedPatron">Patron Username:</label>
                <input type="text" list="patronNames" id="selectedPatron" name="selectedPatron" class="form-control" value="@Model.SelectedPatron" placeholder="Enter patron username" />
                <datalist id="patronNames">
                    @foreach (var patron in Model.Patrons.Take(50))
                    {
                        <option value="@patron.Username">@patron.Username</option>
                    }
                </datalist>
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filter</button>
                <button type="button" class="btn btn-secondary" onclick="clearFilters()">Clear</button>
            </div>
        </div>
    </div>
</form>
<div class="table-responsive">
    @if (Model.Patrons.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>PhoneNumber</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userProfile in Model.FilteredPatrons)
                {
                    <tr>
                        <td>@userProfile.Username</td>
                        <td>@userProfile.Email</td>
                        <td>@userProfile.FirstName</td>
                        <td>@userProfile.LastName</td>
                        <td>@userProfile.PhoneNumber</td>
                        <td>@userProfile.Address</td>
                        <td>
                            <a href="@Url.Action("EditUser", new { userId = userProfile.UserId })">Edit Profile</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found.</p>
    }

    <nav>
        <ul class="pagination">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Patrons", new { page = Model.PageNumber - 1, SelectedPatron = Model.SelectedPatron})">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Patrons", new { page = i , SelectedPatron = Model.SelectedPatron})">@i</a>

                </li>
            }
            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Patrons", new { page = Model.PageNumber + 1 , SelectedPatron = Model.SelectedPatron})">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

<script>
    function clearFilters() {
        document.getElementById("selectedPatron").value = "";
    }
</script>